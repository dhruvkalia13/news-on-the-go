<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.news.dhruvkalia.news_on_the_go.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent_recycler_view"
        android:layout_toEndOf="@+id/main_activity_no_internet" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_internet"
        android:visibility="gone"
        android:tint="#888"
        android:id="@+id/main_activity_no_internet"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_no_internet"
        android:visibility="gone"
        android:text="@string/see_articles_offline"
        android:textSize="32sp"
        android:id="@+id/main_activity_see_article_offline"
        android:gravity="center"
        />
</RelativeLayout>
